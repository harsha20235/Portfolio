    <script>
        const words = ["Web Developer", "Designer", "Ethical Hacker"];
        let i = 0;
        let timer;
      
        function typingEffect() {
          let word = words[i].split("");
          const typingSpan = document.querySelector(".typing-effect");
      
          function loopTyping() {
            if (word.length > 0) {
              typingSpan.innerHTML += word.shift();
            } else {
              deletingEffect();
              return;
            }
            timer = setTimeout(loopTyping, 200);
          }
      
          loopTyping();
        }
      
        function deletingEffect() {
          const word = words[i].split("");
          const typingSpan = document.querySelector(".typing-effect");
      
          function loopDeleting() {
            if (word.length > 0) {
              word.pop();
              typingSpan.innerHTML = word.join("");
            } else {
              if (words.length > (i + 1)) {
                i++;
              } else {
                i = 0;
              }
              typingEffect();
              return;
            }
            timer = setTimeout(loopDeleting, 100);
          }
      
          loopDeleting();
        }
      
        document.addEventListener("DOMContentLoaded", typingEffect);
    </script>
